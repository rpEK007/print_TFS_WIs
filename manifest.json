{
  "manifest_version": 2,

  "name": "Print TFS_2015 Work Items (temp)",
  "description": "This extension allows you to print TFS Work Items right from your Chrome",
  "version": "0.7",

  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Print your tasks!"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "tabs",
    "declarativeContent"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["print.js", "jquery-2.1.3.min.js"],
      "css": ["progress.css"]
    }
  ]
}
